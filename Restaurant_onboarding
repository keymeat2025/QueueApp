                placeholder="e.g., A-, GVR-, etc."
                maxLength="5"
                className="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-blue-500 focus:outline-none text-gray-800"
              />
              <p className="text-xs text-gray-500 mt-1">Leave empty for default numbering</p>
            </div>

            <div>
              <label className="block text-sm font-semibold text-gray-700 mb-3">
                Select Plan
              </label>
              <div className="grid grid-cols-3 gap-4">
                {Object.entries(plans).map(([key, plan]) => (
                  <button
                    key={key}
                    onClick={() => setFormData({ ...formData, plan: key })}
                    className={`p-4 rounded-xl border-2 transition-all ${
                      formData.plan === key
                        ? 'border-blue-500 bg-blue-50'
