import React, { useState } from 'react';
import { Store, MapPin, Phone, Mail, CreditCard, CheckCircle, Users, Settings } from 'lucide-react';

const RestaurantOnboarding = () => {
  const [step, setStep] = useState(1); // 1: Basic Info, 2: Setup, 3: Complete
  const [formData, setFormData] = useState({
    restaurantName: '',
    ownerName: '',
    email: '',
    phone: '',
    address: '',
    city: '',
    state: '',
    pincode: '',
    numberOfTables: 10,
    avgDiningTime: 45,
    plan: 'basic',
    queuePrefix: ''
  });
  const [restaurantId, setRestaurantId] = useState('');

  const plans = {
    basic: {
      name: 'Basic',
      price: 3999,
      features: ['Single location', 'Basic queue', 'SMS notifications', 'Up to 50 customers/day']
    },
    professional: {
      name: 'Professional',
      price: 11999,
      features: ['Up to 3 locations', 'Analytics dashboard', 'WhatsApp notifications', 'Unlimited customers', 'Custom branding']
    },
    enterprise: {
      name: 'Enterprise',
      price: 29999,
      features: ['Unlimited locations', 'API access', 'White-label', 'Priority support', 'Advanced analytics']
    }
  };

  const handleChange = (e) => {
    setFormData({
      ...formData,
      [e.target.name]: e.target.value
    });
  };

  const generateRestaurantId = () => {
    const prefix = formData.restaurantName
      .substring(0, 3)
      .toUpperCase()
      .replace(/[^A-Z]/g, '');
    const random = Math.floor(Math.random() * 1000).toString().padStart(3, '0');
    return `${prefix}${random}`;
  };

  const handleSubmit = () => {
    const id = generateRestaurantId();
    setRestaurantId(id);
    setStep(3);
  };

  if (step === 3) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-emerald-500 to-teal-600 p-6 flex items-center justify-center">
        <div className="bg-white rounded-3xl shadow-2xl p-8 max-w-2xl w-full">
          <div className="text-center mb-6">
            <div className="inline-flex items-center justify-center w-20 h-20 bg-emerald-100 rounded-full mb-4">
              <CheckCircle className="w-12 h-12 text-emerald-600" />
            </div>
            <h1 className="text-3xl font-bold text-gray-800 mb-2">
              Welcome to QueueApp! ðŸŽ‰
            </h1>
            <p className="text-gray-600">Your restaurant is ready to go</p>
          </div>

          <div className="bg-gradient-to-br from-emerald-50 to-teal-50 rounded-2xl p-6 mb-6">
            <h2 className="text-xl font-bold text-gray-800 mb-4">Your Restaurant Details</h2>
            
            <div className="space-y-3 mb-6">
              <div className="flex justify-between items-center">
                <span className="text-gray-600">Restaurant Name:</span>
                <span className="font-semibold text-gray-800">{formData.restaurantName}</span>
              </div>
              <div className="flex justify-between items-center">
                <span className="text-gray-600">Restaurant ID:</span>
                <span className="font-mono font-bold text-emerald-600 text-xl">{restaurantId}</span>
              </div>
              <div className="flex justify-between items-center">
                <span className="text-gray-600">Plan:</span>
                <span className="font-semibold text-gray-800">{plans[formData.plan].name}</span>
              </div>
            </div>

            <div className="border-t border-emerald-200 pt-4">
              <h3 className="font-semibold text-gray-800 mb-3">Your URLs:</h3>
              
              <div className="space-y-2">
                <div className="bg-white rounded-lg p-3">
                  <p className="text-xs text-gray-500 mb-1">Customer Queue Entry:</p>
                  <p className="text-sm font-mono text-blue-600 break-all">
                    https://queueapp.in/r/{restaurantId}/join
                  </p>
                </div>
                
                <div className="bg-white rounded-lg p-3">
                  <p className="text-xs text-gray-500 mb-1">Display Screen:</p>
                  <p className="text-sm font-mono text-blue-600 break-all">
                    https://queueapp.in/r/{restaurantId}/display
                  </p>
                </div>
                
                <div className="bg-white rounded-lg p-3">
                  <p className="text-xs text-gray-500 mb-1">Admin Dashboard:</p>
                  <p className="text-sm font-mono text-blue-600 break-all">
                    https://queueapp.in/r/{restaurantId}/admin
                  </p>
                </div>
              </div>
            </div>
          </div>

          <div className="grid grid-cols-2 gap-4 mb-6">
            <button className="bg-emerald-600 text-white py-3 rounded-xl font-semibold hover:bg-emerald-700 transition-colors flex items-center justify-center gap-2">
              <Settings className="w-5 h-5" />
              Open Dashboard
            </button>
            <button className="bg-blue-600 text-white py-3 rounded-xl font-semibold hover:bg-blue-700 transition-colors">
              Download QR Code
            </button>
          </div>

          <div className="bg-amber-50 border border-amber-200 rounded-xl p-4">
            <h3 className="font-semibold text-amber-900 mb-2">Next Steps:</h3>
            <ol className="text-sm text-amber-800 space-y-1 list-decimal list-inside">
              <li>Print your QR code and place it at the entrance</li>
              <li>Set up the display screen on your TV/monitor</li>
              <li>Train your staff to use the admin panel</li>
              <li>Test with a few customers</li>
            </ol>
          </div>

          <p className="text-center text-sm text-gray-500 mt-6">
            Check your email ({formData.email}) for detailed setup instructions
          </p>
        </div>
      </div>
    );
  }

  if (step === 2) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-blue-500 to-purple-600 p-6 flex items-center justify-center">
        <div className="bg-white rounded-3xl shadow-2xl p-8 max-w-3xl w-full">
          <div className="mb-8">
            <h1 className="text-3xl font-bold text-gray-800 mb-2">Setup Your Queue System</h1>
            <p className="text-gray-600">Configure your restaurant settings</p>
          </div>

          <div className="space-y-6">
            <div className="grid grid-cols-2 gap-4">
              <div>
                <label className="block text-sm font-semibold text-gray-700 mb-2">
