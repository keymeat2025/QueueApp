                  type="number"
                  name="avgDiningTime"
                  value={formData.avgDiningTime}
                  onChange={handleChange}
                  min="15"
                  max="180"
                  className="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-blue-500 focus:outline-none text-gray-800"
